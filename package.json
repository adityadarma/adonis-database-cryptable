{
  "name": "@adityadarma/adonis-database-cryptable",
  "description": "Package to allows developers store data with encrypted and consume again with data decrypted",
  "version": "2.0.2",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build/src",
    "build/services",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./cryptable_provider": "./build/providers/cryptable_provider.js",
    "./cryptable": "./build/services/main.js",
    "./define_config": "./build/src/define_config/index.js",
    "./decorator": "./build/src/decorator/index.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run clean && tsc",
    "postbuild": "npm run copy:templates",
    "release": "release-it",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "encryption",
    "lucid encryption",
    "database encryption",
    "adonis",
    "adonisjs"
  ],
  "author": "Aditya Darma <adhit.boys1@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/adityadarma/adonis-database-cryptable#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adityadarma/adonis-database-cryptable.git"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/http-server": "^7.0.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^3.0.0",
    "@japa/runner": "^3.1.4",
    "@release-it/conventional-changelog": "^9.0.0",
    "@swc/core": "^1.6.3",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.5",
    "@types/sprintf-js": "^1.1.4",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "luxon": "^3.4.4",
    "np": "^10.0.6",
    "openpgp": "^5.11.2",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.5.1||^21.0.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "releaseRules": [
          {
            "type": "breaking",
            "release": "major"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          }
        ]
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config"
}
